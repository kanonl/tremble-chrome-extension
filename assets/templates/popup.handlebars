<table class="table table-sm table-striped">
    <tbody>
        {{#each streamList}}
        <tr>
            <td class="align-top">
                <a href="https://www.twitch.tv/{{ user.display_name }}"><img class="logo img-thumbnail" src="{{ user.profile_image_url }}" alt="{{ user.display_name }}" data-url="https://www.twitch.tv/{{ user.display_name }}"></a></td>
            <td>
                <div class="display_name">{{ user.display_name }}</div>
                <div class="game">{{ game.name }}</div>
                <div class="status">{{ title }}</div>
                <hr>
                <div class="viewers">
                    <ul>
                        <li>{{ viewer_count }} viewers</li><li>{{ started_at }}</li>
                    </ul>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
